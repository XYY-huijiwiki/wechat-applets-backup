.task_scrollview {
    box-sizing: border-box;
    height: calc(100vh - 176rpx - env(safe-area-inset-bottom));
    padding: 40rpx;
}

.bottom_safe {
    padding-bottom: env(safe-area-inset-bottom);
}

.task_item {
    background: rgba(165,175,255,.2);
    border: 2rpx solid rgba(165,175,255,.3);
    border-radius: 24rpx;
    box-sizing: border-box;
    margin-bottom: 16rpx;
    padding: 24rpx;
    position: relative;
    width: 100%;
}

.task_item .task_first {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: space-between;
}

.task_item .task_line {
    background-color: #fff;
    height: 2rpx;
    margin: 24rpx auto;
    opacity: .1;
    width: 100%;
}

.task_item .task_second {
    color: var(--white,#fff);
    font-family: PingFang SC;
    font-size: 24rpx;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    opacity: .6;
}

.task_item .task_second .payload_schemas {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.task_item .task_second .payload_schemas .number {
    margin-right: 8rpx;
}

.task_cover {
    border-radius: 16rpx;
    height: 112rpx;
    margin-right: 24rpx;
    object-fit: cover;
    width: 112rpx;
}

.task_info {
    color: hsla(0,0%,100%,.5);
    flex: 1;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 32rpx;
}

.task_info,.task_title {
    font-family: PingFang SC;
    font-style: normal;
}

.task_title {
    color: var(--white,#fff);
    font-size: 32rpx;
    font-weight: 500;
    line-height: normal;
    margin-bottom: 16rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.task_id {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    margin-bottom: 8rpx;
}

.task_id .task_puple {
    background: #7366ff;
    border-radius: 16rpx;
    color: #fff;
    margin-right: 8rpx;
    padding: 2rpx 8rpx;
}

.task_status {
    align-items: center;
    color: #6aefb7;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    font-family: PingFang SC;
    font-style: normal;
    justify-content: flex-end;
    line-height: 38rpx;
    right: 24rpx;
    top: 24rpx;
}

.task_status,.task_time {
    font-size: 24rpx;
    font-weight: 400;
}

.task_time {
    color: #fff;
    line-height: 32rpx;
    margin-top: 22rpx;
    opacity: .6;
}

.make_icon {
    height: 32rpx;
    margin-right: 8rpx;
    width: 32rpx;
}

.make_ing {
    color: #ffd52c;
}

.make_ing .make_icon {
    animation: rotate 1s linear infinite;
}

@-webkit-keyframes rotate {
0% {
    transform: rotate(0deg);
}

100% {
    transform: rotate(1turn);
}

}
@keyframes rotate {
0% {
    transform: rotate(0deg);
}

100% {
    transform: rotate(1turn);
}

}
.no_more {
    color: #fff;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-style: normal;
    font-weight: 400;
    line-height: 32rpx;
    text-align: center;
    width: 100%;
}

.task_loading {
    color: #fff;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-style: normal;
    font-weight: 400;
    line-height: 32rpx;
    margin-top: 24rpx;
    text-align: center;
    width: 100%;
}

.making_toast,.task_loading {
    align-items: center;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: center;
}

.making_toast {
    background-color: rgba(0,0,0,.5);
    height: 100vh;
    left: 0;
    position: fixed;
    top: 0;
    width: 100vw;
    z-index: 9999;
}

.making_toast .content {
    align-items: center;
    background: #e7ebff;
    border-radius: 40rpx;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    height: 376rpx;
    opacity: 0rpx;
    width: calc(100% - 132rpx);
}

.making_toast .content .title {
    color: #35394d;
    font-family: PingFang SC;
    font-size: 36rpx;
    font-weight: 500;
    margin-top: 16rpx;
    text-align: center;
}

.making_toast .content .sub_title {
    color: #666a80;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 52rpx;
    margin-top: 16rpx;
    text-align: center;
}

.making_toast .content .btn {
    background: #7366ff;
    border-radius: 44rpx;
    color: #fff;
    cursor: pointer;
    font-family: PingFang SC;
    font-size: 32rpx;
    font-weight: 500;
    height: 88rpx;
    line-height: 88rpx;
    margin-top: 40rpx;
    text-align: center;
    width: calc(100% - 220rpx);
}

