@import "../../sub-vendors.wxss";
.video-page {
    align-items: center;
    box-sizing: border-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    height: 100vh;
    width: 100vw;
}

.video_show_wrap {
    aspect-ratio: 9/16;
    border-radius: 24rpx;
    flex: 1;
}

.video_show_video {
    border-radius: 24rpx;
    height: 100%;
    width: 100%;
}

.button-group {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: space-between;
    margin-top: 80rpx;
    width: 320rpx;
}

.button-group Button {
    background-color: initial;
    border: 0rpx;
    height: 168rpx;
    left: 0;
    opacity: 0;
    outline: none;
    position: absolute;
    top: 0;
    width: 100%;
}

.button-group .video_btn {
    align-items: center;
    color: #fff;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-style: normal;
    font-weight: 500;
    height: 168rpx;
    justify-content: space-between;
    line-height: normal;
    position: relative;
    text-align: center;
}

.button-group .video_btn Image {
    height: 112rpx;
    width: 112rpx;
}

