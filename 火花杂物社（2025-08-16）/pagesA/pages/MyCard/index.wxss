@import "../../sub-vendors.wxss";
.card-scrollview {
    box-sizing: border-box;
    height: calc(100vh - 176rpx - env(safe-area-inset-bottom));
    padding: 40rpx;
}

.bottom-safe {
    height: env(safe-area-inset-bottom);
}

.card-item {
    background: rgba(165,175,255,.2);
    border: 2rpx solid rgba(165,175,255,.3);
    border-radius: 24rpx;
    margin-bottom: 16rpx;
    overflow: hidden;
}

.card-content {
    align-items: center;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    padding: 24rpx;
}

.card-image {
    background-color: #f0f0f0;
    border-radius: 12rpx;
    height: 192rpx;
    margin-right: 24rpx;
    object-fit: cover;
    width: 108rpx;
}

.card-info {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex: 1;
    justify-content: space-between;
}

.card-title {
    color: #fff;
    display: block;
    font-family: PingFang SC;
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 24rpx;
}

.card-tags {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
}

.card-tag {
    background: #8599ff;
    border-radius: 20rpx;
    color: #fff;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 10rpx;
}

.card-status {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: flex-end;
}

.status-text {
    font-size: 26rpx;
    padding: 8rpx 0;
}

.status-text.unused {
    color: #6aefb7;
}

.status-text.used {
    color: hsla(0,0%,100%,.5);
}

.card-footer {
    align-items: center;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: space-between;
    margin-top: 28rpx;
}

.expire-date {
    color: hsla(0,0%,100%,.6);
    font-size: 24rpx;
}

.action-button .customize-btn,.action-button .view-btn {
    border-radius: 40rpx;
    display: inline-block;
    font-size: 24rpx;
    padding: 8rpx 32rpx;
    text-align: center;
}

.action-button .customize-btn,.action-button .view-btn {
    background: #7366ff;
    color: #fff;
}

.empty-state,.loading,.no-more {
    color: #fff;
    font-size: 24rpx;
    padding: 64rpx 0;
    text-align: center;
}

.empty-state {
    align-items: center;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    height: 600rpx;
    justify-content: center;
}

