.index {
    font-family: PingFang SC;
}

.index .main-box .content {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    padding: 0rpx 80rpx;
}

.index .main-box .content .title {
    color: #000;
    font-size: 64rpx;
    font-style: normal;
    font-weight: 600;
    height: 90rpx;
    line-height: 90rpx;
    margin: 40rpx 0rpx 24rpx;
    padding-left: 28rpx;
    position: relative;
}

.index .main-box .content .title::before {
    background: #ffd02c;
    border-radius: 6rpx;
    content: "";
    display: inline-block;
    height: 68rpx;
    left: 0rpx;
    position: absolute;
    top: 12rpx;
    width: 12rpx;
}

.index .main-box .content .tips {
    color: #999;
    font-size: 32rpx;
    font-weight: 400;
}

.index .main-box .bg image {
    height: 750rpx;
    width: 750rpx;
}

.index .operation-tips {
    align-items: center;
    color: #999;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-style: normal;
    font-weight: 500;
    gap: 8rpx;
    justify-content: center;
    line-height: normal;
    margin-top: 40rpx;
    text-align: center;
}

.index .operation-tips Image {
    height: 32rpx;
    width: 32rpx;
}

